<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="@drawable/main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="0dp"
        android:paddingVertical="0dp"
        android:background="@drawable/header_background"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/button_toggle_week"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:tint="#F4A900"
            android:layout_margin="12dp"
            android:padding="4dp"
            android:src="@drawable/refresh_arrow"
            android:contentDescription="@string/toggle_week"
            android:background="@android:color/transparent"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="1dp"
            android:textStyle="bold"
            android:background="#404040"
            />

        <TextView
            android:id="@+id/appwidget_current_day"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="День"
            android:textAlignment="center"
            android:textColor="#fafafa"
             />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="1dp"
            android:textStyle="bold"
            android:background="#404040"
            />

        <TextView
            android:id="@+id/appwidget_week_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="Неделя"
            android:textAlignment="center"
            android:textColor="#fafafa"
            />

        <ImageButton
            android:id="@+id/button_previous_day"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:tint="#F4A900"
            android:layout_margin="12dp"
            android:padding="4dp"
            android:src="@drawable/arrowhead"
            android:rotation="180"
            android:background="@android:color/transparent"
            android:contentDescription="@string/previous_day"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="1dp"
            android:textStyle="bold"
            android:background="#404040"
            />


        <ImageButton
            android:id="@+id/button_next_day"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:tint="#F4A900"
            android:layout_margin="12dp"
            android:padding="4dp"
            android:src="@drawable/arrowhead"
            android:background="@android:color/transparent"
            android:contentDescription="@string/next_day"
             />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/schedule_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    </LinearLayout>
</LinearLayout>
